<launch>

    <include file="$(find stingray_sim)/launch/gazebo_base.launch"> </include>
    
    <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depth_to_laser">
        <param name="scan_height" value="3"/>
        <param name="output_frame_id" value="triton_link"/>
        <remap from="image" to="camera/depth/image_raw"/>
    </node>

    <node pkg="gmapping" type="slam_gmapping" name="slam" output="screen">
        <param name="base_frame" value="triton_link"/>
        <param name="map_frame" value="triton_link"/>
        <param name="odom_frame" value="triton_slam"/>
    </node>

</launch>
